<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_top"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:visibility="visible" >

    <RelativeLayout
        android:id="@+id/id_switch_tab_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_tab_1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/gh_blue"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/order_detail_white"/>

                <TextView
                    android:id="@+id/tv_tab_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:text="订单详情"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tab_2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/had_bg"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="30dp"
                    android:src="@mipmap/order_check_evidence"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/tv_tab_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="取证处理"
                    android:textColor="@color/light_gray"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/id_tab_line_iv"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:visibility="gone"
        android:layout_marginLeft="12dp"
        android:background="@color/hand_blue" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:visibility="gone"
        android:background="#38999999" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl_all"
                android:background="@color/white"
                android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:background="@mipmap/icon_top_bg"
        android:visibility="gone"
        android:layout_height="@dimen/head_w">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingTop="2dp"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_width="120dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="40dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/title_back"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返回"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="取证处理"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_head"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:gravity="center_vertical"
                android:background="@color/colorGray"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="车辆信息:"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="1dp"></View>
            <LinearLayout
                style="@style/paddingLR12"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/item_range"
                android:paddingTop="@dimen/item_range"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="车号:"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_detail_truck_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <View
                style="@style/line_h_board12dp"
                android:visibility="gone">

            </View>
            <LinearLayout
                style="@style/paddingLR12"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/item_range"
                android:paddingTop="@dimen/item_range"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="发货单号:"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_form_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

            </LinearLayout>


            <View
                style="@style/line_h_board12dp"
                android:visibility="gone"></View>
            <LinearLayout
                style="@style/paddingLR12"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/item_range"
                android:paddingTop="@dimen/item_range"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="经销商"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_detail_bussiner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

            </LinearLayout>


            <View
                style="@style/line_h_board12dp"
                android:visibility="gone"></View>

            <LinearLayout
                style="@style/paddingLR12"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/item_range"
                android:paddingTop="@dimen/item_range"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="货物:"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_stuff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

            </LinearLayout>


            <View
                style="@style/line_h_board12dp"
                android:visibility="gone"></View>
            <LinearLayout
                style="@style/paddingLR12"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:background="@color/bg_light_gray"
                android:paddingBottom="@dimen/item_range"
                android:paddingTop="@dimen/item_range"
                >

                <TextView
                    android:layout_width="393dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="货物信息"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

            </LinearLayout>
            <LinearLayout
                style="@style/paddingLR12"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/item_range"
                android:paddingTop="@dimen/item_range"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="包装方式:"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_stuff_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_content_black"
                    android:text=""
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <View
                style="@style/line_h_board12dp"
                android:visibility="gone"></View>

            <LinearLayout
                style="@style/paddingLR12"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:paddingBottom="@dimen/item_range"
                android:paddingTop="@dimen/item_range"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="净重:"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_weight_purse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

            </LinearLayout>
            <View
                style="@style/line_h_board12dp"
                android:visibility="gone"></View>
            <LinearLayout
                style="@style/paddingLR12"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/item_range"
                android:paddingTop="@dimen/item_range"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="出发时间:"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_start_car_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <View
                style="@style/line_h_board12dp"
                android:visibility="gone"></View>
            <LinearLayout
                style="@style/paddingLR12"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/item_range"
                android:paddingTop="@dimen/item_range"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="到货时间:"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_unload_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:background="@color/colorGray"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单审核:"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_content_black"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="1dp"></View>
            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/rl_head"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="拍照: "
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="80dp"/>
                <ImageView
                    android:id="@+id/img_add"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/user_photo_need"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_below="@+id/ll_1"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="处理意见: "
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="46dp"/>

                <EditText
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_marginRight="16dp"
                    android:hint="添加处理意见"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="@color/colorGray"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:background="@drawable/shape_bg_hui_kong"
                    android:layout_height="46dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/bt_close"
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_bg_blue_shi"
                    android:text="关闭"/>
                <Button
                    android:id="@+id/bt_save"
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_bg_blue_shi"
                    android:text="保存"/>
                <Button
                    android:id="@+id/bt_ok"
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_bg_blue_shi"
                    android:text="保存并审核"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
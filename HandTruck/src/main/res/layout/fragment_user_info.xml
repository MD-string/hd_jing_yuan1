<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/LinearLayoutBgV"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@mipmap/icon_top_bg"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_user_img"
            android:layout_marginTop="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:text="昵称:xxxxx"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_about_us"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="12dip"
        android:layout_marginTop="8dp"
        android:background="@drawable/sel_bg_white_gray"
        android:layout_height="52dp">
        <TextView
            android:id="@+id/tv_setting_sef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:paddingLeft="6dp"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:src="@mipmap/gray_right_arrow"
            android:layout_marginRight="12dp"
            />
        <TextView
            android:id="@+id/app_ver"
            android:layout_width="wrap_content"
            android:text="@string/app_version"
            android:textColor="@color/black"
            android:layout_marginRight="38dp"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_out"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="12dip"
        android:layout_marginTop="28dp"
        android:background="@drawable/sel_bg_white_gray"
        android:layout_height="52dp">
        <TextView
            android:id="@+id/tv_login_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textColor="@color/hand_blue"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:paddingLeft="6dp"
            android:layout_weight="1"
            />
    </RelativeLayout>

</LinearLayout>

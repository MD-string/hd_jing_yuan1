<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinearLayoutBgV"
    android:layout_width="match_parent"
    android:id="@+id/ll_all"
    android:layout_height="match_parent"
    tools:context="com.hand.handtruck.activity.AddTruckActivity">

    <include layout="@layout/layout_common_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/bg_light_gray"
            />

        <LinearLayout
            android:id="@+id/ll_select_company"
            style="@style/paddingRL12dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/column_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                style="@style/input_text_title"
                android:text="公司名称:"/>

            <EditText
                android:id="@+id/et_select_company"
                style="@style/EditorStyle"
                android:hint="@string/select_company_name"
                android:layout_weight="1"
                />
        </LinearLayout>




        <View
            style="@style/line_tol12_fill_r"></View>


        <LinearLayout
            style="@style/paddingRL12dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/column_height"
            android:orientation="horizontal">

            <TextView
                style="@style/input_text_title"
                android:text="电话号码:"
                />

            <EditText
                android:id="@+id/et_phone"
                style="@style/EditorStyle"
                android:hint="@string/input_phone"
                android:inputType="phone"
                android:maxLength="11"/>
        </LinearLayout>
        <View
            style="@style/line_tol12_fill_r"></View>

        <LinearLayout
            style="@style/paddingRL12dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/column_height"
            android:orientation="horizontal">

            <TextView
                style="@style/input_text_title"
                android:text="公司邮箱:"
                />

            <EditText
                android:id="@+id/tv_company_email"
                style="@style/EditorStyle"
                android:hint="请输入邮箱"
                android:inputType="textEmailAddress"
                />
        </LinearLayout>
        <View
            style="@style/line_tol12_fill_r"></View>

        <LinearLayout
            android:id="@+id/ll_pro"
            style="@style/paddingRL12dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/column_height"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/txt_content_black"
                android:textSize="14sp"
                android:text="省份:"/>

            <TextView
                android:id="@+id/tv_pro"
                style="@style/EditorStyle"
                android:hint="请输入省份"
                />
        </LinearLayout>
        <View
            style="@style/line_tol12_fill_r"></View>

        <LinearLayout
            android:id="@+id/ll_city"
            style="@style/paddingRL12dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/column_height"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/txt_content_black"
                android:textSize="14sp"
                android:text="城市:"/>

            <TextView
                android:id="@+id/tv_city"
                style="@style/EditorStyle"
                android:hint="请输入城市"
                />
        </LinearLayout>

        <View
            style="@style/line_tol12_fill_r"></View>

        <LinearLayout
            style="@style/paddingRL12dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/column_height"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/txt_content_black"
                android:textSize="14sp"
                android:text="详细地址:"/>

            <EditText
                android:id="@+id/et_more_address"
                style="@style/EditorStyle"
                android:hint="请输入详细地址"
                />
        </LinearLayout>

        <View
            style="@style/line_tol12_fill_r"></View>

    </LinearLayout>

    <Button
        android:id="@+id/btn_add_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/btn_round_corner"
        android:text="添加"
        android:textColor="@color/bg_white"
        android:textSize="16sp"
        />

</LinearLayout>

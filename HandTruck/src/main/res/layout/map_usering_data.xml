<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
             >
    <RelativeLayout
        android:id="@+id/ll_trend_weight"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_wei"
            android:orientation="vertical"
            android:background="@mipmap/icon_weight_show"
            android:layout_width="150dp"
            android:visibility="visible"
            android:paddingTop="6dp"
          android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:layout_height="56dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="当前速度:"
                    android:textSize="11sp"
                    android:textColor="@color/bg_white"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_current_speed"
                    android:layout_width="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/bg_white"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_weight"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="当前载重:"
                    android:textSize="11sp"
                    android:textColor="@color/bg_white"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_trend_weight"
                    android:layout_width="wrap_content"
                    android:text="10555"
                    android:textSize="11sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/bg_white"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:text="吨"
                    android:textSize="11sp"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/bg_white"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="60dp"
            android:src="@mipmap/icon_thrunck"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ll_wei"
            android:layout_height="32dp"/>
    </RelativeLayout>

</RelativeLayout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/LinearLayoutBgV"
    tools:context=".activity.TruckInfoActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.hand.handtruck.Widget.listview.XListView
            android:id="@+id/list_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="true"
            android:fadingEdge="none"
            android:dividerHeight="0.5dp"
            android:divider="@color/bg_light_gray"
            android:fastScrollEnabled="false"
            android:listSelector="@android:color/transparent"
            android:scrollbars="vertical"
            android:scrollingCache="false"
            android:transcriptMode="disabled"
            android:visibility="visible">

        </com.hand.handtruck.Widget.listview.XListView>

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:background="@drawable/shape_bg_half_hui_3"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_height="28dp">
        <TextView
            android:id="@+id/tv_current_page"
            android:layout_width="wrap_content"
            android:text="1"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_total_page"
            android:layout_width="wrap_content"
            android:text="/19"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>

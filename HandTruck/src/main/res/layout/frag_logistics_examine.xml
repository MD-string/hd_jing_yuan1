<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/LinearLayoutBgV"
    tools:context=".activity.TruckInfoActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="42dp">
                <TextView
                    android:layout_width="120dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/hand_blue"
                    android:text="客户名称"/>
                <TextView
                    android:layout_width="65dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/hand_blue"
                    android:text="运输车牌"/>
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/hand_blue"
                    android:text="发货单号"/>
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/hand_blue"
                    android:text="发货重量(吨)"/>
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/hand_blue"
                    android:text="包装方式"/>
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/hand_blue"
                    android:text="出场时间"/>
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/hand_blue"
                    android:text="处理意见"/>
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/hand_blue"
                    android:text="图片"/>
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/hand_blue"
                    android:text="状态"/>
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/hand_blue"
                    android:text="操作"/>

            </LinearLayout>

            <com.hand.handtruck.Widget.listview.XListView
                android:id="@+id/list_normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="true"
                android:fadingEdge="none"
                android:dividerHeight="0.5dp"
                android:divider="@color/bg_light_gray"
                android:fastScrollEnabled="false"
                android:listSelector="@android:color/transparent"
                android:scrollbars="vertical"
                android:scrollingCache="false"
                android:transcriptMode="disabled"
                android:visibility="visible">

            </com.hand.handtruck.Widget.listview.XListView>

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>

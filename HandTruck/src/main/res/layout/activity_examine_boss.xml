<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayoutBgV"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:background="@mipmap/icon_examine_bg"
        android:layout_height="76dp">

        <RelativeLayout
            android:id="@+id/rl_0"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="28dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="95dp"
                android:layout_marginLeft="12dp"
                android:singleLine="true"
                android:textSize="15sp"
                android:textColor="@color/gh_black"
                android:layout_centerVertical="true"
                android:text="销售部审核"/>

            <TextView
                android:id="@+id/tv_examine_market"
                android:layout_width="100dp"
                android:gravity="center"
                android:text="通过"
                android:background="@drawable/shape_form_green"
                android:layout_marginTop="4dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_11"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rl_1"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:singleLine="true"
                android:textSize="13sp"
                android:textColor="@color/gh_shen_gray"
                android:text="销售部意见:"/>
            <TextView
                android:id="@+id/tv_market_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_0"
                android:layout_marginLeft="8dp"
                android:textSize="13sp"
                android:textColor="@color/gh_shen_gray"/>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:visibility="gone"
        android:background="@mipmap/icon_examine_bg"
        android:layout_height="76dp">

        <RelativeLayout
            android:id="@+id/rl_10"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="28dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="95dp"
                android:layout_marginLeft="12dp"
                android:singleLine="true"
                android:textSize="15sp"
                android:textColor="@color/gh_black"
                android:layout_centerVertical="true"
                android:text="分管领导审核"/>

            <TextView
                android:id="@+id/tv_leader_check"
                android:layout_width="100dp"
                android:gravity="center"
                android:text="未审核"
                android:background="@drawable/shape_form_blue"
                android:layout_marginTop="4dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_12"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rl_1"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:singleLine="true"
                android:textSize="13sp"
                android:textColor="@color/gh_shen_gray"
                android:text="分管领导意见:"/>
            <TextView
                android:id="@+id/tv_leader_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_12"
                android:layout_marginLeft="8dp"
                android:textSize="13sp"
                android:textColor="@color/gh_shen_gray"/>

        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:background="@mipmap/icon_examine_msg"
        android:layout_height="180dp">
        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="28dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="95dp"
                android:singleLine="true"
                android:text="分管领导审核"
                android:textColor="@color/gh_black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_ex_boss"
                android:layout_width="100dp"
                android:gravity="center"
                android:text="未审核"
                android:background="@drawable/shape_form_blue"
                android:layout_marginTop="4dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rl_1"
            android:layout_marginLeft="10dp"
            android:layout_height="38dp">
            <TextView
                android:id="@+id/tv_bos_ame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:singleLine="true"
                android:textSize="13sp"
                android:textColor="@color/gh_shen_gray"
                android:text="上次意见:"/>
            <TextView
                android:id="@+id/tv_last_advice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_bos_ame"
                android:layout_marginLeft="8dp"
                android:textSize="13sp"
                android:textColor="@color/gh_shen_gray"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/rl_2"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="30dp"
            android:layout_height="79dp">
            <EditText
                android:id="@+id/et_other_advice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="6dp"
                android:textSize="13sp"
                android:background="@null"
                android:textColor="@color/gh_shen_gray"/>
            <TextView
                android:id="@+id/tv_hint_tip"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text="请输入审核意见"
                android:textColor="@color/gh_light_gray"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_click_examine"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="22dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="22dp"
        android:layout_centerHorizontal="true"
        android:layout_height="116dp">
        <RelativeLayout
            android:id="@+id/bt_close"
            android:layout_width="42dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/icon_ex_end"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/img_1"
                android:gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:textColor="@color/gh_shen_gray"
                android:layout_centerHorizontal="true"
                android:textSize="12sp"
                android:text="结束"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_un_pass"
            android:layout_centerHorizontal="true"
            android:layout_width="45dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_2"
                android:layout_width="45dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/icon_ex_unpass"
                android:layout_height="45dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/img_2"
                android:layout_marginTop="3dp"
                android:gravity="center_horizontal"
                android:textColor="@color/gh_shen_gray"
                android:layout_centerHorizontal="true"
                android:textSize="12sp"
                android:text="不通过"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pass"
            android:layout_width="42dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_3"
                android:layout_width="42dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/icon_ex_pass"
                android:layout_height="42dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/img_3"
                android:layout_marginTop="3dp"
                android:gravity="center_horizontal"
                android:textColor="@color/gh_shen_gray"
                android:layout_centerHorizontal="true"
                android:textSize="12sp"
                android:text="通过"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/height_subject_all"
        android:layout_height="@dimen/height_subject_image"
        android:background="@mipmap/add_need_choose"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight="1.2"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_com"
                android:layout_width="wrap_content"
                android:src="@mipmap/icon_add_company"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_com"
                android:layout_marginLeft="5dp"
                android:textColor="@color/bg_white"
                android:text="添加公司"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:background="@color/lightGray2"
            android:layout_height="0.5dp"/>


        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_1"
                android:layout_width="wrap_content"
                android:src="@mipmap/icon_add_right"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_1"
                android:layout_marginLeft="5dp"
                android:textColor="@color/bg_white"
                android:text="添加车辆"/>
        </RelativeLayout>
    </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg_white"
    android:layout_height="50dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:minHeight="50dp"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/tv_dev_number"
        android:layout_width="60dp"
        android:text="456732379"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="11sp"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_car_numb"
        android:layout_width="60dp"
        android:text="桂B23106"
        android:layout_marginLeft="6dp"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="11sp"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/tv_close_date"
        android:layout_width="60dp"
        android:text="2019-07-17 19:79:88"
        android:layout_marginLeft="6dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="11sp"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/tv_addreess"
        android:layout_width="60dp"
        android:layout_weight="2"
        android:text="广西壮族自治区柳州市柳北区雀儿山街道跃进路190柳州市明旭经贸有限公司"
        android:layout_marginLeft="6dp"
        android:gravity="center"
        android:textSize="10sp"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/tv_open_date"
        android:layout_width="60dp"
        android:layout_weight="1"
        android:text="2019-07-17 19:79:88"
        android:layout_marginLeft="6dp"
        android:gravity="center"
        android:textSize="11sp"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/tv_outline_date"
        android:layout_width="60dp"
        android:layout_weight="1"
        android:text="17时37分48秒"
        android:visibility="gone"
        android:layout_marginLeft="6dp"
        android:gravity="center"
        android:textSize="11sp"
        android:layout_height="match_parent"/>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_gray"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/sel_bg_white_gray"
        >
        <ImageView
            android:id="@+id/iv_isOnLine"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:src="@drawable/sel_truck_isonline"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"

            />
        <TextView
            android:id="@+id/tv_plate_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/txt_content_black"
            android:text="粤B888888"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/iv_isOnLine"
            android:layout_marginLeft="11dp"
            />
        <ImageView
            android:layout_width="11dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_right_arrow"
            android:scaleType="centerCrop"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            />
        <TextView
            android:id="@+id/tv_truck_isOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_12"
            android:textColor="@color/txt_content_gray"
            android:text="是否在线"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/iv_isOnLine"
            android:layout_below="@+id/tv_plate_number"
            android:layout_marginLeft="11dp"
            android:visibility="gone"

            />
        <TextView
            android:id="@+id/tv_truck_isOnLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_range"
            android:textColor="@color/bg_white"
            android:gravity="center"
            android:text="离线"
            android:background="@drawable/bg_truck_isonline"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/tv_plate_number"
            />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/sel_bg_white_gray"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"

        >
        <TextView
            android:id="@+id/line_1"
            android:layout_width="match_parent"
            android:background="@color/lightGray2"
            android:layout_height="0.5dp"/>
            />
        <ImageView
            android:id="@+id/iv_truckInfo_arrow"
            android:layout_width="11dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_right_arrow"
            android:scaleType="centerCrop"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/hd_black"
                android:text="金圆水泥"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:maxLength="16"
               ></TextView>
            <TextView
                android:id="@+id/tv_truck_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_12"
                android:layout_marginLeft="8dp"
                android:textColor="@color/hd_hui"
                android:gravity="center_vertical"
                android:text="车辆数"
                android:layout_alignParentBottom="true"
                />
            <TextView
                android:id="@+id/tv_truck_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_12"
                android:textColor="@color/hd_blue"
                android:text="20辆"
                android:layout_toRightOf="@+id/tv_truck_num"
                android:layout_alignBottom="@+id/tv_truck_num"
                android:layout_marginLeft="11dp"
                />
            <TextView
                android:id="@+id/tv_online_truck_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_12"
                android:textColor="@color/hd_hui"
                android:text="在线车辆数"
                android:layout_toRightOf="@+id/tv_truck_number"
                android:layout_alignBottom="@+id/tv_truck_num"
                android:layout_marginLeft="18dp"
                />
            <TextView
                android:id="@+id/tv_online_truck_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_12"
                android:textColor="@color/hd_lv"
                android:text="10辆"
                android:layout_toRightOf="@+id/tv_online_truck_num"
                android:layout_alignBottom="@+id/tv_truck_num"
                android:layout_marginLeft="11dp"
                />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>